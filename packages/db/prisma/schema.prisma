generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User{
  id        String   @id   @default(uuid())
  username  String   @unique
  password  String
  todos     Todo[]
}

model Todo{
  id        String   @id   @default(uuid())
  task      String
  done      Boolean  @default(false)
  userId    String
  user      User     @relation(fields: [userId], references: [id])
}
